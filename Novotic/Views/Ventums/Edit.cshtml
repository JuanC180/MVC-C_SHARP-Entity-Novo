@model Novotic.Models.Ventum

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Venta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CodigoVenta" />
            <div class="form-group">
                <label asp-for="FechaVenta" class="control-label"></label>
                <input asp-for="FechaVenta" class="form-control" />
                <span asp-validation-for="FechaVenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorTotalVenta" class="control-label"></label>
                <input asp-for="ValorTotalVenta" class="form-control" />
                <span asp-validation-for="ValorTotalVenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCliente" class="control-label"></label>
                <input asp-for="IdCliente" class="form-control" />
                <span asp-validation-for="IdCliente" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-center  w-100 my-4">
                <div class="div_botones form-group ms-sm-0  w-100">
                    <input type="submit" value="Create" class="btn btn-dark w-100 btn-styles" />
                </div>
            </div>


        </form>
    </div>
</div>

<div>
    <a asp-action="Index">
        <input class="btn btn-dark" type="submit" value="Volver" />
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
