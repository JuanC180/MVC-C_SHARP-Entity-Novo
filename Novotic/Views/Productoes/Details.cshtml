</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CodigoProducto">
        <input class="btn btn-warning" type="submit" value="Editar" />
    </a>
    <a asp-action="Index">
        <input class="btn btn-dark" type="submit" value="Volver" />
    </a>
</div>
