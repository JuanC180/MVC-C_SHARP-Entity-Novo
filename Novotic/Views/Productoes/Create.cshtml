@model Novotic.Models.Producto

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center py-5 pt-0 my-0">CREAR PRODUCTO</h1>




<div class="row">
    
        <form asp-action="Create" class="d-flex justify-content-center flex-column">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- cuadros -->
            <div class="contenedores d-flex justify-content-center flex-xl-row flex-column  flex-sm-column mx-5 gap-5">
                <div class="contenedores__div1 d-flex flex-column align-items-center ms-sm-0 w-100 ">
                    <div class="mb-3 w-100">
                        <label asp-for="NombreProducto" class="control-label"></label>
                        <input asp-for="NombreProducto" class="form-control" />
                        <span asp-validation-for="NombreProducto" class="text-danger"></span>
                    </div>
                    <div class="mb-3 w-100">
                        <label asp-for="PrecioPrducto" class="control-label"></label>
                        <input asp-for="PrecioPrducto" class="form-control" />
                        <span asp-validation-for="PrecioPrducto" class="text-danger"></span>
                    </div>
                    <div class="mb-3 w-100">
                        <label asp-for="DescripcionProducto" class="control-label"></label>
                        <input asp-for="DescripcionProducto" class="form-control" />
                        <span asp-validation-for="DescripcionProducto" class="text-danger"></span>
                    </div>
                </div>


                <div class="contenedores__div2 d-flex flex-column align-items-center me-5 me-sm-0  w-100 ">

                    <div class="mb-3 w-100">
                        <label asp-for="Imagen" class="control-label"></label>
                        <input asp-for="Imagen" class="form-control" />
                        <span asp-validation-for="Imagen" class="text-danger"></span>
                    </div>
                    <div class="mb-3 w-100">
                        <label asp-for="Estado" class="control-label"></label>
                        <input asp-for="Estado" class="form-control" />
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                </div>

            </div>

            <!-- botones -->
            <div class="contenedor__botones d-flex justify-content-center flex-xl-row flex-column flex-sm-column my-3 mx-5 gap-5 ">
                <div class="d-flex justify-content-center  w-100">
                    <div class="div_botones form-group ms-sm-0  w-100">
                        <input type="submit" value="Create" class="btn btn-dark w-100 btn-styles" />
                    </div>
                </div>

                <div class="d-flex justify-content-center w-100">
                    <div class="div_botones  me-sm-0  w-100">
                        <button type="reset" class="btn btn-dark w-100 btn-styles">Limpiar</button>
                    </div>
                </div>
            </div>
        </form>
    
</div>

<hr />
<div>
    <a asp-action="Index">
        <input class="btn btn-dark" type="submit" value="Volver" />
     </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
